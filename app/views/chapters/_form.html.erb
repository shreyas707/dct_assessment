<%= form_for(@chapter) do |f| %>
  <% if @chapter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@chapter.errors.count, "error") %> prohibited this chapter from being saved:</h2>

      <ul>
      <% @chapter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <div class="ui input"><%= f.text_field :name %></div><br/><br/>
  </div>

  <div class="field">
    <label>Select topics that the chapter belongs to:</label>
    <%= f.collection_select :topic_ids, Topic.all, :id, :name, {prompt: "Select Chapters"}, {class: "ui fluid search dropdown", multiple: ""} %><br/>
  </div>

  <div class="actions">
    <%= f.submit class: "ui primary button" %><br/><br/>
  </div>
<% end %>

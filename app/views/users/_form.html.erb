<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <h4>These errors prohitibted the form from being saved: </h4>
    <ul style = "color:red;">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class = "field">

    <label>Name</label><br/>
    <div class="ui input"><%= f.text_field :name %></div>
    <br/><br/>

    <label>Email</label><br/>
    <div class="ui input"><%= f.text_field :email %></div>
    <br/><br/>

    <label>Password</label><br/>
    <div class="ui input"><%= f.password_field :password %></div>
    <br/><br/>

    <label>Re-enter Password</label><br/>
    <div class="ui input"><%= f.password_field :password_confirmation %></div>
    <br/><br/>

    <label>User Role: Admin</label><br/>
    <%= f.hidden_field :role, value: "admin" %>
    <br/><br/>

    <label>Disable this user</label>&nbsp&nbsp<%= f.radio_button :is_active, value: false %><br/><br/>

  </div>

  <%= f.submit 'Submit', class: "ui primary button" %><br/><br/>
<% end %>
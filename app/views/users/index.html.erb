<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="ui celled padded table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Active</th>
      <th>Show</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.student.try(:name) %></td>
        <td><%= user.email %></td>
        <td><%= user.student.try(:mobile) %></td>
        <td><%= user.is_active %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "ui primary button" %><br/><br/>

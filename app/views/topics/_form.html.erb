<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <div class="ui input"><%= f.text_field :name %></div><br/><br/>
  </div>
  <div class="field">
    <label>Select courses that the topics belong to:</label>
    <%= f.collection_check_boxes :course_ids, Course.all, :id, :name do |b| %><br/>
      <%= b.check_box class: "ui checkbox" %>
      <%= b.label %>
    <% end %><br/><br/>
  </div>
  <div class="actions">
    <%= f.submit class: "ui primary button" %><br/><br/>
  </div>
<% end %>

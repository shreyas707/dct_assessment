
<script>
  $(document).ready(function(){
    $('#knowledgebasesTable').DataTable();
});

</script>
<h3>Articles on <%= @knowledges[0].chapter.name %>  </h3>
	<table class = "ui celled padded table" id ="knowledgebasesTable">
    <thead>
      <tr>
     <th> Sl no</th>
     <th>Title</th>
     <th>Body</th>
     <th> Topic</th>
     <th> Chapter</th>
     <th> Link</th>
   </tr>
  </thead>

   <tbody>
  <% @knowledges.each_with_index do |knowledge, index| %>

  <tr>
      <td> <%= index + 1 %></td>
      <td> <%= link_to knowledge.title,knowledge_basis_path(knowledge) %></td>
      <td> <%= knowledge.body.truncate(50).html_safe %></td>
      <td> <%= link_to knowledge.topic.name,knowledge_bases_topic_articles_path(:topic_id => knowledge.topic_id) %> </td>
      <td> <%= link_to knowledge.chapter.name,knowledge_bases_chapter_articles_path(:chapter_id => knowledge.chapter_id) %> </td>
      <td> <%= link_to "Visit Site", "https://#{knowledge.links}", {target: "_blank"} %> </td>
      
     </tr>
     <%end%>
   </tbody>
  </table>
  <%= link_to 'Back', knowledge_bases_path,class: "ui black button" %>
<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>
<%= link_to 'New Course', new_course_path, class: "ui primary button" %><br/><br/>

<table class="ui celled padded table" id="dataTable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Show</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= link_to 'Show', course %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>


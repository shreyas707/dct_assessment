<%= form_for(@solution) do |f| %>
  <% if @solution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@solution.errors.count, "error") %> prohibited this solution from being saved:</h2>

      <ul>
      <% @solution.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :question_id %><br>
    <%= f.collection_select :question_id, Question.all, :id, :title, prompt: "Select a question" %>
  </div>
  <div class="field">
    <%= f.label :topic_id %><br>
    <%= f.collection_select :topic_id, Topic.all, :id, :name, prompt: "Select a topic" %>
  </div>
  <div class="field">
    <%= f.label :chapter_id %><br>
    <%= f.collection_select :chapter_id, Chapter.all, :id, :name, prompt: "Select a chapter" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
